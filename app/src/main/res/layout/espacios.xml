<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundcolor"
    tools:context="mi.aplicacion.PromediaTuSemestre.ActivitySemestre">

    <TextView
        android:id="@+id/primerTexto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/texto_3"
        android:layout_marginStart="40dp"
        android:textAlignment="textStart"
        android:textColor="?attr/textcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/nota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <EditText
        android:id="@+id/nota"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:layout_marginEnd="15dp"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="?attr/textcolor"
        android:backgroundTint="?attr/textcolor"
        app:layout_constraintEnd_toStartOf="@+id/segundoTexto"
        app:layout_constraintStart_toEndOf="@+id/primerTexto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/segundoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/texto_4"
        android:textAlignment="center"
        android:textColor="?attr/textcolor"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/porcentaje"
        app:layout_constraintStart_toEndOf="@+id/nota"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/porcentaje"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/textcolor"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textColor="?attr/textcolor"
        app:layout_constraintEnd_toStartOf="@+id/simbolo"
        app:layout_constraintStart_toEndOf="@+id/segundoTexto"
        app:layout_constraintTop_toTopOf="@+id/nota" />

    <TextView
        android:id="@+id/simbolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="@string/simbolo"
        android:textAlignment="center"
        android:textColor="?attr/textcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/porcentaje"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>